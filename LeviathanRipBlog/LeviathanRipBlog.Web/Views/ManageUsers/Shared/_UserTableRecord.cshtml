@model LeviathanRipBlog.Web.Data.ApplicationUser 

<tr>
    <td>@Model.Id</td>
    <td>@Model.Email</td>
    <td>
        <div class="d-flex justify-content-evenly">
            @if (Model.IsAdmin) {
                <button class="btn btn-success btn-sm" type="button">Revoke Admin</button>
            } else {
                <button class="btn btn-success btn-sm" type="button">Promote Admin</button>
            }
                                   
            <button class="btn btn-danger btn-sm" type="button"> <i class="fa-solid fa-trash pe2 "></i> Remove User</button>
        </div>
    </td>
</tr>